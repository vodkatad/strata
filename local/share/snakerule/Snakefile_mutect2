# We remove the POP_AF=1, they are SNP where the reference is mutated, all gnomad has alternate allele, not a somatic mutation
# I think.
rule passFilter:
    input: "{sample}.filtered.vcf.gz"
    output: "{sample}.pass.vcf.gz"
    shell:
        """
        zcat {input} |  awk '/^#/ || $7=="PASS"' | grep -v 'POP_AF=1.00;' | bgzip > {output}
        tabix {output}
        """ 

#     Skip sites where FILTER column does not contain any of the strings listed in LIST. For example, to include only sites which have no filters set, use -f .,PASS. 
rule merge:
    input: expand("{sample}.pass.vcf.gz", sample=SAMPLES)
    output: "merged.vcf"
    shell:
        """
            bcftools merge --missing-to-ref -m none -i DP:avg,TLOD:min,P_CONTAM:max,P_GERMLINE:min -o {output} {input}
        """


rule VEP:
    input: "merged.vcf"
    output: txt="merged.vep.txt", html="merged.vep.stats.html", table="merged.table_nomultiallelele"
    params: cd=VEP_CACHE_DIR
    shell:
        """
             bcftools annotate -I +'%CHROM:%POS:%REF:%ALT' {input} > {input}.id
             vep -i {input}.id --cache --dir_cache {params.cd} --output_file {output.txt} --stats_file {output.html} --pick
             cat {input}.id | grep -v "^#" |  perl -ane '@gt=($F[9],$F[10],$F[11],$F[12],$F[13]); $gt=""; foreach $g (@gt) {{ @afs = split(":",$g); if ($afs[2] eq ".") {{$afs[2]=0;}} $gt.=$afs[2]."\t";}}; chop($gt) ; print $F[2]."\\t".$F[0]."_".$F[1]."_".$F[3]."_".$F[4]."\\t".$gt."\\n"' | grep -v "," > {output.table}
             rm {input}.id
        """
