rule calculatecontamination:
    input: "{sample}.pileup.table"
    output: "{sample}.contamination.table"
    singularity: ROOT+"/gatk/gatk.img"
    shell:
        """
            gatk CalculateContamination  -I {input} -O {output}
        """

